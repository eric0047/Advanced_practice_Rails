<h1>All Books</h1>

<%= link_to 'add book', new_book_path %>


<table>
  <tr>
    <td>Title</td>
    <td>Author</td>
    <td>info</td>
  </tr>
  
  
  <% @books.each do |book| %>
  
    <tr>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.author %></td>
      <td><%= book.info %></td>
      <td><%= link_to 'Update', edit_book_path(book.id) %></td>
      <td><%= link_to 'Delete', book_path(book.id), method: 'delete', data: {confirm: 'sure?'} %></td>
    </tr>
  
  <% end %>
</table>